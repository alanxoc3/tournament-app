<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".screens.MainScreen"
    android:id="@+id/it">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Contestants"
        android:id="@+id/viewContestant"
        android:onClick="viewContestants"
        android:enabled="true"
        android:layout_below="@+id/enterContestant"
        android:layout_alignEnd="@+id/enterContestant"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bracket view"
        android:id="@+id/bracketView"

        android:onClick="startBracket"
        android:enabled="true"

        android:layout_marginTop="42dp"
        android:layout_below="@+id/poolView"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pool View"
        android:id="@+id/poolView"
        android:onClick="startPool"
        android:enabled="true"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/viewContestant"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Contestants"
        android:id="@+id/enterContestant"
        android:onClick="setContestants"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />

</RelativeLayout>
