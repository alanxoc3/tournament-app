<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".screens.MatchScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:onClick="pointP1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button2"
        android:layout_below="@+id/p2Name"
        android:layout_alignStart="@+id/button"
        android:onClick="decPointP1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:onClick="pointP2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button4"
        android:layout_above="@+id/button3"
        android:layout_alignParentEnd="true"
        android:onClick="decPointP2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1Name"
        android:text="Player 1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button2"
        android:textSize="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2Name"
        android:layout_alignTop="@+id/p1Name"
        android:layout_toStartOf="@+id/button3"
        android:text="Player 2"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/button5"
        android:onClick="yellow1"
        android:layout_alignTop="@+id/button7"
        android:layout_toStartOf="@+id/p1Name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/button6"
        android:onClick="red1"
        android:layout_below="@+id/button5"
        android:layout_toStartOf="@+id/p1Name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/button7"
        android:onClick="yellow2"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/p2Name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/button8"
        android:onClick="red2"
        android:layout_below="@+id/button7"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cards"
        android:layout_alignTop="@+id/btn_cancel"
        android:layout_toStartOf="@+id/p1Score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fence"
        android:id="@+id/start"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/stop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halt"
        android:id="@+id/stop"
        android:layout_below="@+id/start"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cards2"
        android:layout_alignTop="@+id/button8"
        android:layout_alignStart="@+id/p2Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/p2Score"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/p2Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/p1Score"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignEnd="@+id/p1Name" />

    <TextView
        android:id="@+id/tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="15:00"
        android:layout_alignBottom="@+id/p1Name"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />




    <Button
        android:id="@+id/btn_resume"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Resume"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/start" />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cancel(Stop)"
        android:layout_below="@+id/stop"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finished"
        android:id="@+id/finished"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="finished" />

</RelativeLayout>
